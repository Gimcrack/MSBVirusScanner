<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="applicationSettings"
                  type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="YourProjectName.Properties.Settings"
               type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
               requirePermission="false" />
    </sectionGroup>
  </configSections>
  <appSettings>
    
    <add key="patterns" value=""/> <!-- pipe-separated list of additional patterns to search for -->
    <add key="whitelist" value=""/>   <!--  pipe-separated list of whitelisted file patterns  -->
    
    <add key="action" value="alert"/> <!-- options: alert | disconnect | shutdown -->
    <add key="action_on_find" value="stop"/> <!-- options: stop | continue -->
    
    <!-- email settings -->
    <add key="email_to" value="recipient@domain.com"/> <!--  pipe-separated list of email addresses  -->
    
      <!-- don't edit below this line -->
    <add key="email_from" value="example@domain.com"/>
    <add key="email_server" value="mail.server.com"/>
    <add key="email_username" value="mail_username"/>
    <add key="email_password" value="mail_password"/>
    <add key="email_port" value="587"/>
    
    <!-- other settings -->
    <add key="slack_hook" value="https://hooks.slack.com/services/<your-hook-url>"/>
  
    <!-- debug / testing settings-->
    <add key="debug" value="0"/> <!-- options: 0 | 1 -->
    <add key="debug_email" value="admin@domain.com"/>
    
  </appSettings>
    
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
</configuration>